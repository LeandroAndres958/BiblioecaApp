<Window x:Class="BibliotecaApp.HomeAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home Administrador" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FFF4F4F4">

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="720" Background="#FFF4F4F4">
            <!-- Tu diseño aquí igual que antes -->

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Background="White" Height="60" VerticalAlignment="Top" Margin="0" LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="Inicio" FontSize="18" FontWeight="Bold" Margin="0,0,20,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Mis Libros" FontSize="18" Margin="0,0,20,0" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,0,20,0" VerticalAlignment="Center">
                    <TextBlock Text="Administrador" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Ellipse Width="30" Height="30" Fill="Gray"/>
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,20,0,10">
                <TextBlock Text="Agregar libro" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Button x:Name="btnAgregarLibro" Width="40" Height="40" Margin="10,0,0,0"
                        Click="btnAgregarLibro_Click"
                        Background="#FF007ACC" Foreground="White" FontSize="20"
                        Content="+" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>

            <ScrollViewer Grid.Row="2" Margin="20" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="wpLibrosAdmin" ItemWidth="160" ItemHeight="240" />
            </ScrollViewer>
        </Grid>
    </Viewbox>
</Window>

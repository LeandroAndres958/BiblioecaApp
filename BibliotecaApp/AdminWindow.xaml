<Window x:Class="BibliotecaAp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administración Biblioteca" Height="650" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl x:Name="tabControl" FontSize="14">
            <!-- Pestaña Insertar -->
            <TabItem Header="Insertar Libro">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Titulo:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertTitulo" Margin="0,5,0,10"/>

                        <TextBlock Text="Autor:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertAutor" Margin="0,5,0,10"/>

                        <TextBlock Text="Editorial:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertEditorial" Margin="0,5,0,10"/>

                        <TextBlock Text="Páginas:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertPaginas" Margin="0,5,0,10"/>

                        <TextBlock Text="Idioma:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertIdioma" Margin="0,5,0,10"/>

                        <TextBlock Text="Categoría:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertCategoria" Margin="0,5,0,10"/>

                        <TextBlock Text="Año de publicación:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertAño" Margin="0,5,0,10"/>

                        <TextBlock Text="Descripción:" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertDescripcion" Height="70" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,10"/>

                        <TextBlock Text="Link Portada (URL):" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertPortadaLink" Margin="0,5,0,10"/>

                        <TextBlock Text="Link del PDF (URL):" FontWeight="Bold"/>
                        <TextBox x:Name="txtInsertPdfLink" Margin="0,5,0,10"/>

                        <Button x:Name="btnInsertarLibro" Content="Insertar Libro" Width="150" HorizontalAlignment="Center" Click="btnInsertarLibro_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Pestaña Editar -->
            <TabItem Header="Editar Libro">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="Selecciona libro:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="cbEditarLibros" Width="300" SelectionChanged="cbEditarLibros_SelectionChanged"/>
                    </StackPanel>


                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <UIElement.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </UIElement.RenderTransform>
                            <TextBlock Text="Título:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditTitulo" Margin="0,5,0,10"/>

                            <TextBlock Text="Autor:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditAutor" Margin="0,5,0,10"/>

                            <TextBlock Text="Editorial:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditEditorial" Margin="0,5,0,10"/>

                            <TextBlock Text="Páginas:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditPaginas" Margin="0,5,0,10"/>

                            <TextBlock Text="Idioma:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditIdioma" Margin="0,5,0,10"/>

                            <TextBlock Text="Categoría:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditCategoria" Margin="0,5,0,10"/>

                            <TextBlock Text="Año de publicación:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditAño" Margin="0,5,0,10"/>

                            <TextBlock Text="Descripción:" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditDescripcion" Height="35" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,10"/>

                            <TextBlock Text="Link Portada (URL):" FontWeight="Bold"/>
                            <TextBox x:Name="txtEditPortadaLink" Margin="0,5,0,10"/>

              


                            <Button x:Name="btnGuardarCambios" Content="Guardar Cambios" Width="150" HorizontalAlignment="Center" Click="btnGuardarCambios_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Pestaña Eliminar -->
            <TabItem Header="Eliminar Libro">
                <StackPanel Margin="10">
                    <TextBlock Text="Selecciona libro para eliminar:" Margin="0,0,0,10" FontWeight="Bold"/>
                    <ComboBox x:Name="cbEliminarLibros" Width="400" Margin="0,0,0,10"/>
                    <Button x:Name="btnEliminarLibro" Content="Eliminar Libro" Width="150" HorizontalAlignment="Center" Click="btnEliminarLibro_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

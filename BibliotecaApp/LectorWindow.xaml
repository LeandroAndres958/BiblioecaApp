<Window x:Class="BibliotecaApp.LectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LectorWindow" Height="600" Width="900" Background="#FAFAFA">

    <DockPanel Margin="10">

        <!-- Barra Superior -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="50" VerticalAlignment="Center">
            <TextBlock Text="Mi Biblioteca" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
            <TextBlock Text=" | " FontSize="20" Margin="5,0" VerticalAlignment="Center" Foreground="#888"/>
            <Button Content="Inicio" Width="80" Margin="5,0" VerticalAlignment="Center"
                    Background="#2980B9" Foreground="White" BorderThickness="0"
                    FontWeight="SemiBold" Cursor="Hand" Click="btnInicio_Click"/>
            <TextBlock Text=" | " FontSize="20" Margin="5,0" VerticalAlignment="Center" Foreground="#888"/>
            <Button Content="Mis libros" Width="100" Margin="5,0" VerticalAlignment="Center"
                    Background="#2980B9" Foreground="White" BorderThickness="0"
                    FontWeight="SemiBold" Cursor="Hand" Click="btnMisLibros_Click"/>
            <ComboBox x:Name="cbCategorias" Width="150" Margin="20,0,0,0" VerticalAlignment="Center" SelectionChanged="cbCategorias_SelectionChanged">
                <ComboBoxItem Content="Todas" IsSelected="True"/>
                <ComboBoxItem Content="Ficción"/>
                <ComboBoxItem Content="No Ficción"/>
                <ComboBoxItem Content="Ciencia"/>
                <ComboBoxItem Content="Historia"/>
            </ComboBox>
        </StackPanel>

        <Rectangle Height="1" Fill="#CCCCCC" Margin="0,10"/>

        <!-- Nuevo lanzamiento -->
        <StackPanel DockPanel.Dock="Top" Margin="0,10">
            <TextBlock Text="Nuevo lanzamiento" FontSize="22" FontWeight="Bold" Foreground="#444" Margin="5"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" Height="180" Margin="0,5,0,10">
                <StackPanel x:Name="spNuevosLanzamientos" Orientation="Horizontal" Margin="5"/>
            </ScrollViewer>
        </StackPanel>

        <!-- Todos los libros -->
        <TextBlock Text="Todos los libros" FontSize="22" FontWeight="Bold" Foreground="#444" Margin="5"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wpLibros" Orientation="Horizontal" Margin="5"/>
        </ScrollViewer>

    </DockPanel>
</Window>

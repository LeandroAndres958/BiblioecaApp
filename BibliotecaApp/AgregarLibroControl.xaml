<UserControl x:Class="BibliotecaApp.AgregarLibroControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
        <StackPanel>
            <TextBlock Text="Titulo:" FontWeight="Bold"/>
            <TextBox x:Name="txtTitulo" Margin="0,5,0,10"/>

            <TextBlock Text="Autor:" FontWeight="Bold"/>
            <TextBox x:Name="txtAutor" Margin="0,5,0,10"/>

            <TextBlock Text="Editorial:" FontWeight="Bold"/>
            <TextBox x:Name="txtEditorial" Margin="0,5,0,10"/>

            <TextBlock Text="Páginas:" FontWeight="Bold"/>
            <TextBox x:Name="txtPaginas" Margin="0,5,0,10"/>

            <TextBlock Text="Idioma:" FontWeight="Bold"/>
            <TextBox x:Name="txtIdioma" Margin="0,5,0,10"/>

            <TextBlock Text="Categoría:" FontWeight="Bold"/>
            <TextBox x:Name="txtCategoria" Margin="0,5,0,10"/>

            <TextBlock Text="Año de publicación:" FontWeight="Bold"/>
            <TextBox x:Name="txtAnio" Margin="0,5,0,10"/>

            <TextBlock Text="Descripción:" FontWeight="Bold"/>
            <TextBox x:Name="txtDescripcion" Height="70" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,10"/>

            <TextBlock Text="Link Portada (URL):" FontWeight="Bold"/>
            <TextBox x:Name="txtPortadaLink" Margin="0,5,0,10"/>

            <TextBlock Text="Link del PDF (URL):" FontWeight="Bold"/>
            <TextBox x:Name="txtPdfLink" Margin="0,5,0,10"/>

            <Button Content="Insertar Libro" Width="150" HorizontalAlignment="Center" Click="btnInsertarLibro_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

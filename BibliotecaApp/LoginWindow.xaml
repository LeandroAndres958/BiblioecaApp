<Window x:Class="BibliotecaApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BibliotecaApp - Login"
        Height="380" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F7FA"
        >

    <Border Background="White" CornerRadius="12" Padding="30" Margin="20" 
            Effect="{DynamicResource DropShadowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Bienvenido a BibliotecaApp" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Correo -->
            <TextBlock Text="Correo" FontWeight="SemiBold" Foreground="#555" Grid.Row="1" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCorreo" Grid.Row="2" Height="35" FontSize="14" Padding="6"
                     BorderBrush="#CCC" BorderThickness="1" Background="#FFF" />

            <!-- Contraseña -->
            <TextBlock Text="Contraseña" FontWeight="SemiBold" Foreground="#555" Grid.Row="3" Margin="0,15,0,5"/>
            <PasswordBox x:Name="txtContraseña" Grid.Row="4" Height="35" FontSize="14" Padding="6"
                         BorderBrush="#CCC" BorderThickness="1" Background="#FFF" />

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="5" Margin="0,25,0,0">
                <Button Content="Iniciar sesión" Width="140" Height="38" Margin="0,0,15,0"
                        Background="#3B82F6" Foreground="White" FontWeight="SemiBold" BorderThickness="0" 
                        Cursor="Hand"
                        Click="btnIniciarSesion_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3B82F6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" >
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1E40AF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Crear cuenta" Width="140" Height="38"
                        Background="#E5E7EB" Foreground="#374151" FontWeight="SemiBold" BorderThickness="0" 
                        Cursor="Hand"
                        Click="btnCrearCuenta_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E5E7EB"/>
                            <Setter Property="Foreground" Value="#374151"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="6" >
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#D1D5DB"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#9CA3AF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

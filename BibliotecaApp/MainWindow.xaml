<Window x:Class="BibliotecaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaApp"
        mc:Ignorable="d"
        Title="Detalle del Libro" Height="600" Width="950" Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Portada -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Border Width="200" Height="280" Background="#E0E0E0" CornerRadius="10" Margin="0,0,0,10">
                <Image x:Name="imgPortada" Stretch="UniformToFill"/>
            </Border>
            <TextBlock x:Name="txtTitulo" Text="Título del libro" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtAutor" Text="Autor del libro" FontSize="14" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Información del libro -->
        <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Top">
            <TextBlock Text="Descripción" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescripcion"
                     Text="..."
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     Height="150"
                     VerticalScrollBarVisibility="Auto"
                     Background="White"
                     BorderBrush="#DDD"/>

            <!-- Detalles -->
            <StackPanel Margin="0,20,0,10">
                <TextBlock x:Name="txtEditorial" Text="Editorial: ----" Margin="0,2,0,0"/>
                <TextBlock x:Name="txtPaginas" Text="Páginas: ----" Margin="0,2,0,0"/>
                <TextBlock x:Name="txtIdioma" Text="Idioma: ----" Margin="0,2,0,0"/>
                <TextBlock x:Name="txtCategoria" Text="Categoría: ----" Margin="0,2,0,0"/>
                <TextBlock x:Name="txtAnio" Text="Año de publicación: ----" Margin="0,2,0,0"/>
                <TextBlock x:Name="txtEstado" Text="Estado: ----" FontWeight="Bold" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Content="📥 Solicitar libro" Background="#0078D7" Foreground="White" Width="150" Height="35" Margin="0,0,10,0"/>
                <Button Content="← Volver" Background="#CCCCCC" Width="100" Height="35"/>
            </StackPanel>

            <!-- Recomendación -->
            <StackPanel Margin="0,30,0,0">
                <TextBlock Text="⭐ Recomendado por otros usuarios" Foreground="#FF8C00" FontWeight="Bold"/>
                <ProgressBar Minimum="0" Maximum="100" Value="70" Height="10" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
    

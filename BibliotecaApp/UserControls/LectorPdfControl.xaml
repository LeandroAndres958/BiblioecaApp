<UserControl x:Class="BibliotecaApp.Controls.LectorPdfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             Height="Auto" Width="Auto" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Background="#415a77" Height="50">
            <Button Content="Regresar" Width="100" Margin="5" Click="BtnRegresar_Click"/>
            <TextBlock x:Name="txtTitulo" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </DockPanel>

        <wv2:WebView2 x:Name="webView" Grid.Row="1"/>
    </Grid>
</UserControl>

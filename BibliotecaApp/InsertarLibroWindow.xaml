<Window x:Class="BibliotecaApp.InsertarLibroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Libro"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <StackPanel HorizontalAlignment="Center" Width="500">
                <TextBlock Text="Agregar nuevo libro" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

                <TextBlock Text="Título:"/>
                <TextBox x:Name="txtTitulo" Margin="0,0,0,10"/>

                <TextBlock Text="Autor:"/>
                <TextBox x:Name="txtAutor" Margin="0,0,0,10"/>

                <TextBlock Text="Editorial:"/>
                <TextBox x:Name="txtEditorial" Margin="0,0,0,10"/>

                <TextBlock Text="Páginas:"/>
                <TextBox x:Name="txtPaginas" Margin="0,0,0,10"/>

                <TextBlock Text="Idioma:"/>
                <TextBox x:Name="txtIdioma" Margin="0,0,0,10"/>

                <TextBlock Text="Categoría:"/>
                <TextBox x:Name="txtCategoria" Margin="0,0,0,10"/>

                <TextBlock Text="Año de publicación:"/>
                <TextBox x:Name="txtInsertAnio" Margin="0,5,0,10" />

                <TextBlock Text="Descripción:"/>
                <TextBox x:Name="txtDescripcion" TextWrapping="Wrap" AcceptsReturn="True" Height="80" Margin="0,0,0,10"/>

                <TextBlock Text="Link de portada (imagen):"/>
                <TextBox x:Name="txtLinkPortada" Margin="0,0,0,10"/>

                <TextBlock Text="Link del PDF:"/>
                <TextBox x:Name="txtLinkPDF" Margin="0,0,0,20"/>

                <Button Content="Insertar libro" Click="btnInsertar_Click"
                        Height="45" Background="#2E8B57" Foreground="White"
                        FontWeight="Bold" FontSize="16"/>

                <Button Content="← Volver"
        Click="BtnVolver_Click"
        Width="100"
        Height="30"
        Margin="0,20,0,0"
        HorizontalAlignment="Center"
        Background="#F0F0F0"
        BorderBrush="#CCCCCC"
        Foreground="Black"
        FontSize="13"
        FontWeight="Normal"
        Cursor="Hand"/>



            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>



